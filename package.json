{
  "name": "owa",
  "version": "0.0.1",
  "description": "Out of this World Advice is an interactive art installation.  owa.awakening.io",
  "main": "build/main.js",
  "scripts": {
    "test": "mocha --require babel-register",
    "build_docs": "plantuml -tsvg docs/*.puml",
    "watch_docs": "npm-watch build_docs",
    "build": "babel src -d build",
    "watch": "npm-watch build",
    "start": "node build/main.js",
    "start_dev": "babel-node src/main.js"
  },
  "watch": {
    "build_docs": {
      "patterns": [
        "docs"
      ],
      "extensions": "puml"
    },
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js"
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "author": "Colin Sullivan <colin@colin-sullivan.net>",
  "license": "GPLv3",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.3.0",
    "npm-watch": "^0.2.0"
  },
  "dependencies": {
    "abletonlink-redux": "0.0.6",
    "awakening-sequencers": "^0.7.9",
    "chai": "^4.1.2",
    "mocha": "^5.0.1",
    "osc": "^2.2.0",
    "redux": "^3.7.2",
    "serialport": "^6.0.5",
    "supercollider-redux": "0.0.7",
    "supercolliderjs": "^0.14.2",
    "winston": "^2.3.1"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "env": {
      "browser": false,
      "node": true,
      "es6": true,
      "mocha": true
    },
    "rules": {
      "no-console": 0,
      "no-use-before-define": "error",
      "block-scoped-var": "error"
    }
  }
}
