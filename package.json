{
  "name": "owa",
  "version": "0.0.1",
  "description": "Out of this World Advice is an interactive art installation.  owa.awakening.io",
  "main": "build/main.js",
  "scripts": {
    "test": "mocha",
    "build_docs": "plantuml -tsvg docs/*.puml",
    "watch_docs": "npm-watch build_docs",
    "build": "babel src -d build",
    "build_dev": "babel -s true --source-root build/ src -d build",
    "watch": "npm-watch build_dev",
    "start": "node build/main.js"
  },
  "watch": {
    "build_docs": {
      "patterns": [
        "docs"
      ],
      "extensions": "puml"
    },
    "build_dev": {
      "patterns": [
        "src"
      ],
      "extensions": "js"
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "author": "Colin Sullivan <colin@colin-sullivan.net>",
  "license": "GPLv3",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.3.0",
    "npm-watch": "^0.2.0"
  },
  "dependencies": {
    "abletonlink-redux": "0.0.3",
    "osc": "^2.2.0",
    "redux": "^3.7.2",
    "supercolliderjs": "^0.14.2"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true
      }
    },
    "env": {
      "browser": false,
      "node": true,
      "es6": true
    },
    "rules": {
      "no-console": 0,
      "no-use-before-define": "error",
      "block-scoped-var": "error"
    }
  }
}
